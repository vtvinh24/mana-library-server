### Boot params
# Server running mode: standalone or docker
RUNNING_MODE=standalone
# Node environment: development, production
NODE_ENV=development
# Server port number
PORT=8000

### Directories
# Directory path for storing log files
DIR_LOGS=./logs
# Directory path for storing media files
DIR_MEDIA=./media

### Database credentials
# MongoDB host address
DB_HOST=localhost
# MongoDB port number
DB_PORT=27017
# MongoDB username
DB_USER=
# MongoDB password
DB_PASSWORD=
# MongoDB database name
DB_DATABASE=

### Database connection retry settings
# Delay between connection retry attempts in milliseconds
DB_RETRY_DELAY=5000
# Maximum number of retry attempts
DB_RETRY_COUNT=5

### Logger
# Logging levels: ERROR, WARN, INFO, or DEBUG
LOGGER_LEVEL=INFO

### CORS
# Allowed origins for Cross-Origin Resource Sharing (use * for all)
CORS_ORIGIN=*

### Rate-limiter
# Time window in milliseconds for rate limiting
RATE_LIMITER_WINDOW_MS=15000
# Maximum number of requests allowed in the time window
RATE_LIMITER_MAX=100

### JWT Authentication
# JWT signing algorithm (RS256 recommended for production)
JWT_ALGORITHM=RS256
# Secret key for signing JWT tokens
# If RS256 is used, this will be ignored
JWT_SECRET=your_secret_key_here
# JWT token expiration time
JWT_EXPIRES_IN=1h
# JWT issuer identifier
JWT_ISSUER=mana-library
# JWT refrsh secret
JWT_REFRESH_SECRET=second_secret_key
# JWT refresh token expiration time
JWT_REFRESH_EXPIRES_IN=7d